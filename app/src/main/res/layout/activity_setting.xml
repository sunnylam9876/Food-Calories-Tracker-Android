<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="334dp"
            android:text="Gender:"
            android:textColor="@color/normal_font_color"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rb_group"
            android:layout_width="405dp"
            android:layout_height="103dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp">

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Female"
                android:textColor="@color/normal_font_color"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Male"
                android:textColor="@color/normal_font_color"
                android:textSize="18sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16sp"
            android:text="Weight (kg):"
            android:textColor="@color/normal_font_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:ems="10"
            android:hint="Please enter your weight here..."
            android:inputType="number"
            android:textColor="@color/light_blue"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16sp"
            android:text="Height (cm):"
            android:textColor="@color/normal_font_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:ems="10"
            android:hint="Please enter your height here..."
            android:inputType="number"
            android:textColor="@color/light_blue"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16sp"
            android:text="Calories Budget:"
            android:textColor="@color/normal_font_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_cal_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:ems="10"
            android:hint="Please enter your calories budget here..."
            android:inputType="number"
            android:textColor="@color/light_blue"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:text="(hint: range from 2500 - 5000)"
            android:textColor="@color/gray" />

        <Button
            android:id="@+id/btn_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="Learn how to calcualate calories budget"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_personal_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="Save" />

        <Button
            android:id="@+id/btn_personal_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="Delete record" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>